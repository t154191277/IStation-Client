<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GoodDetailActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:visibility="invisible"
                android:id="@+id/activity_gooddetail_frame"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.youth.banner.Banner
                    android:id="@+id/activity_gooddetail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="380dp" />

                <com.gcssloop.widget.RCRelativeLayout
                    android:id="@+id/activity_gooddetail_back"
                    android:background="@drawable/black_background"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:round_corner="20dp">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/left_arrow"
                        android:gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </com.gcssloop.widget.RCRelativeLayout>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="389dp"
                    android:text="￥"
                    android:textSize="16sp"
                    android:textColor="@color/ic_taobao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="385dp"
                    android:id="@+id/activity_gooddetail_price"
                    android:text="0.00"
                    android:textSize="20sp"
                    android:textColor="@color/ic_taobao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="412dp"
                    android:id="@+id/activity_gooddetail_name"
                    android:text="稳品穿搭 INS网红 嘻哈吴亦凡牛仔裤 直筒水洗破洞牛仔裤"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_gooddetail_carriage"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:text="快递：10.00元"
                    android:layout_marginTop="460dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_gooddetail_salesNum"
                    android:textSize="10sp"
                    android:layout_marginLeft="180dp"
                    android:text="已售8笔"
                    android:layout_marginTop="460dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#f2f0f0"
                    android:layout_marginTop="480dp"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="495dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:text="促销"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textColor="@color/black"
                        android:text="满100减5"
                        android:layout_marginLeft="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <View
                    android:background="#f2f0f0"
                    android:layout_marginTop="520dp"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="535dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:text="服务"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textColor="@color/black"
                        android:text="7天无理由·公益宝贝·48小时内发货"
                        android:layout_marginLeft="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <View
                    android:background="#f2f0f0"
                    android:layout_marginTop="558dp"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="570dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:text="规格"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/activity_gooddetail_selected"
                        android:textColor="@color/black"
                        android:text="已选规格"
                        android:layout_marginLeft="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <View
                    android:background="#f2f0f0"
                    android:layout_marginTop="595dp"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <RelativeLayout
                    android:id="@+id/rl_shop"
                    android:layout_marginTop="605dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <com.gcssloop.widget.RCRelativeLayout
                        android:background="@drawable/profile_cat"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:round_corner="4dp">
                    </com.gcssloop.widget.RCRelativeLayout>



                    <TextView
                        android:id="@+id/shop_name"
                        android:textColor="@color/black"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="20dp"
                        android:text="整套潮牌Bank"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="38dp"
                        android:text="关注：1000万"
                        android:textSize="7sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:background="@drawable/textview_shape_corner_red"
                        android:gravity="center"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="18dp"
                        android:layout_alignParentRight="true"
                        android:text="进店逛逛"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:layout_width="50dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:background="@drawable/textview_shape_corner_grey"
                        android:gravity="center"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="80dp"
                        android:layout_alignParentRight="true"
                        android:text="全部宝贝"
                        android:textSize="10sp"
                        android:layout_width="50dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="72dp"
                        android:layout_marginLeft="15dp"
                        android:text="宝贝描述"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:text="4.8 高"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:layout_marginLeft="58dp"
                        android:layout_marginTop="72dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="72dp"
                        android:layout_marginLeft="172dp"
                        android:text="卖家服务"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:text="4.8 高"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:layout_marginLeft="215dp"
                        android:layout_marginTop="72dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_marginTop="72dp"
                        android:layout_marginRight="45dp"
                        android:text="物流服务"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="4.8 高"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="72dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"
                android:text="商品评论"
                android:layout_below="@id/activity_gooddetail_frame"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/activity_gooddetail_rl_progressbar"
                android:layout_marginTop="300dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <ProgressBar
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_marginTop="75dp"
                    android:text="正在加载..."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="51dp">

        <View
            android:layout_marginBottom="51dp"
            android:background="#c7c7c7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <LinearLayout
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/goods_detail_shop"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:text="店铺"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/goods_detail_serve"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:text="客服"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/goods_detail_start"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:text="收藏"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/activity_gooddetail_btn_addcart"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:background="@drawable/btn_shape_left_corner_yellow"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="加入购物车"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/activity_gooddetail_btn_tobuy"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:background="@drawable/btn_shape_right_corner_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="立即购买"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="wmlove.istation.fragment.MeFragment">


    <android.support.v7.widget.Toolbar
        app:title="@string/app_name"
        android:id="@+id/fragment_me_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/status_bar_color"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <RelativeLayout
            android:id="@+id/me_profile"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rl_shape_corner_gray"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="8dp"
                android:id="@+id/profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/profile_cat"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="他不要你了死心吧"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="查看或编辑个人主页"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/fragment_me_order_list"
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="20dp" />

            <TextView
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:layout_marginStart="43dp"
                android:text="我的订单"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:text="查看全部订单"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/fragment_me_order_list_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:layout_width="25dp"
                android:layout_height="15dp" />

        </RelativeLayout>

        <View
            android:background="#c7c7c7"
            android:layout_marginTop="41dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="42dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fragment_me_rl_topay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/fragment_me_sequence_topay"
                    android:layout_width="25dp"
                    android:layout_height="30dp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="42dp"
                    android:textSize="11sp"
                    android:text="待付款"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/fragment_me_sequence_tocarrige"
                    android:layout_width="25dp"
                    android:layout_height="30dp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="42dp"
                    android:textSize="11sp"
                    android:text="待付款"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/fragment_me_sequence_torecive"
                    android:layout_width="25dp"
                    android:layout_height="30dp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="42dp"
                    android:textSize="11sp"
                    android:text="待付款"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/fragment_me_sequence_tocomment"
                    android:layout_width="25dp"
                    android:layout_height="30dp" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="42dp"
                    android:textSize="11sp"
                    android:text="待付款"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

